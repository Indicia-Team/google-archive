<?xml version="1.0" encoding="UTF-8"?>
<report title="Get users for a website" description="List a user's names and details for a given user id. Note this will return these details even if user is flagged as deleted.">
      <query>
        SELECT #columns#
        FROM users u
        JOIN people p on u.person_id=p.id
        WHERE (u.id=#user_id#)
      </query>
  <params>
    <param name='user_id' display='User ID' datatype='integer' />
  </params>
      <columns>
            <column name="id" display="User ID" sql="u.id" datatype="integer" in_count="true"/>
            <column name="firstname" display="First name" sql="p.first_name" datatype="text"/>
            <column name="surname" display="Surname" sql="p.surname" datatype="text"/>
            <column name="fullname" display="Full name" sql="p.first_name || ' ' || p.surname" datatype="text"/>
            <column name="username" display="Username" sql="u.username" datatype="text"/>
      </columns>
</report>
